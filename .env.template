# ============================================================================
# agentshq n8n Production Environment Configuration Template
# Copy this file to .env and fill in your actual values
# ============================================================================

# PostgreSQL Configuration
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=

# Redis Configuration
REDIS_PASSWORD=
REDIS_PORT=6479

# n8n Encryption & Security
N8N_ENCRYPTION_KEY=
N8N_BASIC_AUTH_USER=
N8N_BASIC_AUTH_PASSWORD_HASH=
N8N_BASIC_AUTH_HASH=

# Grafana Configuration
GRAFANA_ADMIN_USER=
GRAFANA_ADMIN_PASSWORD=

# Service URLs
MANAGER_HOST=
N8N_PORT=8645
GRAFANA_PORT=8646
HTTP_REDIRECT_PORT=8180
PROMETHEUS_PORT=9490
ALERTMANAGER_PORT=9493
NODE_EXPORTER_PORT=9300

# Timezone
TIMEZONE=Asia/Dhaka

# Execution & Performance
N8N_EXECUTION_TIMEOUT=3600
N8N_PAYLOAD_SIZE_MAX=16
N8N_WORKER_CONCURRENCY=3

# Logging
LOG_LEVEL=info
N8N_DIAGNOSTICS_ENABLED=false

# Database Performance Tuning
DB_MAX_CONNECTIONS=250
DB_SHARED_BUFFERS=256MB
DB_EFFECTIVE_CACHE_SIZE=1GB
DB_WORK_MEM=10MB

# Redis Queue Configuration
REDIS_MAXMEMORY=900mb
REDIS_MAXMEMORY_POLICY=allkeys-lru
